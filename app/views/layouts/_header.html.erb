<header class="main-header">
	<%= link_to root_path, class: "logo" do %>
	<!-- mini logo for sidebar mini 50x50 pixels -->
	<span class="logo-mini"><b>S</b>F</span>
	<!-- logo for regular state and mobile devices -->
	<span class="logo-lg"><b>Student</b>Forum</span>
	<%end%>

	<!-- Header Navbar: style can be found in header.less -->
	<nav class="navbar navbar-static-top" role="navigation">
		<!-- Sidebar toggle button-->
		<a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
			<span class="sr-only">Toggle navigation</span>
		</a>
		<!-- Navbar Right Menu -->
		<div class="navbar-custom-menu">
			<ul class="nav navbar-nav">
				<!-- Notifications: style can be found in dropdown.less -->
				<li class="dropdown notifications-menu">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<i class="fa fa-bell-o"></i>
						<span class="label label-warning"><%= current_user.ntfs_count %></span>
					</a>
					<ul class="dropdown-menu">
						<li class="header">You have <%= current_user.ntfs_count %> notifications</li>
						<li>
							<!-- inner menu: contains the actual data -->
							<ul class="menu">
								<% current_user.unread_ntfs.each do |nf|
								%>
								<%= render 'layouts/notifications', nf: nf %>
								<%end%>
							</ul>
						</li>
						<li class="footer"><a href="#">Notifications</a></li>
					</ul>
				</li>
				<!-- User Account: style can be found in dropdown.less -->
				<li class="dropdown user user-menu">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					    <%= image_tag current_user.has_pic, class: "user-image", alt: "User Image"%>
						<span class="hidden-xs"><%= current_user.email %></span>
					</a>
					<ul class="dropdown-menu">
						<!-- User image -->
						<li class="user-header">
						    <%= image_tag current_user.has_pic, class: "img-circle", alt: "User Image"%>
							<p>
								<%= current_user.full_name %>
								<small><%= current_user.role_name%> <%= current_user.join_date %></small>
							</p>
						</li>
						<!-- Menu Footer-->
						<li class="user-footer">
							<div class="pull-left">
								<%= link_to 'Profile', edit_user_path(current_user), class: "btn btn-default btn-flat" %>
							</div>
							<div class="pull-right">
								<%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
							</div>
						</li>
					</ul>
				</li>
			</ul>
		</div>
	</nav>
</header>