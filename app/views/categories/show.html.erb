<div class="row">
  <div class="col-sm-6">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Post</h3>
        <div class="pull-right"><%= link_to 'New Post', new_category_post_path(@category), class: 'btn btn-primary btn-xs btn-flat' if can? :create, @post %>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @category.live_posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                <td><%= link_to post.title, category_post_path(@category, post) %></td>
                <td><%if can? :update, post%><%= link_to edit_category_post_path(@category,post) do%><i class="fa fa-edit"></i><%end%><%end%></td>
                <td><%if can? :delete, post%><%= link_to [@category, post], method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fa fa-trash"></i><%end%><%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div class="col-sm-6">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Document</h3>
        <div class="pull-right"><%= link_to 'New Document', new_category_document_path(@category), class: 'btn btn-primary btn-xs btn-flat' if can? :create, @document %>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Files</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @category.live_documents.each do |document| %>
              <tr>
                <td><%= document.id %></td>
                <td><%= document.title %></td>
                <td>
                  <% if can? :read, document %>
                    <%= render '/file_data/files', object: document%>
                  <% end %>
                </td>
                <td><% if can? :update, document %><%= link_to edit_category_document_path(@category, document) do %><i class="fa fa-edit"></i><%end%><%end%></td>
                <td><% if can? :delete, document %><%= link_to [@category, document], method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fa fa-trash"></i><%end%><%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>