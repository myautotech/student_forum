<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Posts List</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= render '/posts/post', category: post.category, post: post %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div>
  </div>
</div>