<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Categories List</h3>
        <div class="pull-right"><%= link_to 'New Category',  new_group_category_path(@group), class: 'btn btn-primary btn-xs btn-flat' if can? :create, @category %>
        </div>
        <div>
          <strong>Name: </strong><%= @group.name %>
          <strong>Status: </strong><%= @group.status %>
          <strong>Admin: </strong><%= @group.group_admin.full_name %>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Description</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @group.live_categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= link_to category.name, group_category_path(@group, category) %></td>
                <td><%= category.description %></td>
                <td><%if can? :update, category %><%= link_to edit_group_category_path(@group, category) do %><i class="fa fa-edit"></i><%end%><%end%></td>
                <td><%if can? :delete, category%><%= link_to [@group, category], method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fa fa-trash"></i><%end%><%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>