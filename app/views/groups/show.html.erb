<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Categories List</h3>
        <div class="pull-right"><%= link_to 'New Category',  new_group_category_path(@group), class: 'btn btn-primary btn-xs btn-flat' if can? :create, @category %>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @group.live_categories.each_slice(4) do |categories| %>
              <tr>
                <% categories.each do |category| %>
                  <td>
                    <div class="col-sm-4">
                      <div class="info-box">
                        <span class="info-box-icon bg-aqua"><i class="fa fa-navicon"></i></span>
                        <div class="info-box-content">
                          <span class="info-box-text"><%= link_to category.name, group_category_path(@group, category) %></span>
                          <span class="info-box-number"><small><%= category.description %></small></span>
                          <div class="category-action">
                            <%if can? :update, category %><%= link_to edit_group_category_path(@group, category) do %><i class="fa fa-edit"></i><%end%><%end%>&nbsp;&nbsp;
                            <%if can? :delete, category%><%= link_to [@group, category], method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fa fa-trash"></i><%end%><%end%>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                <%end%>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>