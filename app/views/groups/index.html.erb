<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Customers List</h3>
        <div class="pull-right"><%= link_to 'New Group', new_group_path, class: 'btn btn-primary btn-xs btn-flat' if can? :create, Group %>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Status</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td><%= group.id %></td>
                <td><%= link_to group.name, group_path(group) if can? :show_read, group %></td>
                <td><%= group.status if can? :show_read, group %></td>
                <td><%if can? :update, group %><%= link_to edit_group_path(group) do%><i class="fa fa-edit"></i><%end%><%end%></td>
                <td><%if can? :update, group%><%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } do%><i class="fa fa-trash"></i><%end%><%end%></td>
                <td><%if can? :update, group%><%= link_to add_members_group_path(group) do %><i class="fa fa-user-plus"></i><%end%><%end%></td>
                <td><%if can? :update, group%><%= link_to members_group_path(group) do%><i class="fa fa-users"></i><%end%><%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>