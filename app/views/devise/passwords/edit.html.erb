<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %><b>Student</b>Forum<%end%>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Change your password</p>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group has-feedback">
        <%= f.password_field :password, hide_label: true, autofocus: true, autocomplete: "off", placeholder: 'Password' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, hide_label: true, autofocus: true, autocomplete: "off", placeholder: 'Password Confirmation' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <%= f.submit "Change Password", class: "btn btn-primary btn-block btn-flat" %>
        </div><!-- /.col -->
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
