<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %><b>Student</b>Forum<%end%>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Forgot your password?</p>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, hide_label: true, autofocus: true, placeholder: 'Email' %>
        <span class="fa fa-envelope form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <%= f.submit "Resend Password", class: "btn btn-primary btn-block btn-flat" %>
        </div><!-- /.col -->
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->