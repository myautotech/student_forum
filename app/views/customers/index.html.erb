<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Customers List</h3>
        <div class="pull-right"><%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary btn-xs btn-flat' %></div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table table-striped table-hover datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Country</th>
              <th>Email</th>
              <th>Contact no</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name, customer_path(customer) %></td>
              <td><%= customer.country %></td>
              <td><%= customer.email %></td>
              <td><%= customer.contact_no %></td>
              <td><%= link_to edit_customer_path(customer) do %><i class='fa fa-edit'></i><%end%></td>
              <td><%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' } do %><i class='fa fa-trash'></i><%end%></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>