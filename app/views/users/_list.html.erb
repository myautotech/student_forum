<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Users List</h3>
        <div class="pull-right">
          <% if current_user.super_admin? && customer %>
            <%= link_to 'New User', new_user_path(customer_id: customer.id), class: 'btn btn-primary btn-xs btn-flat' %>
          <%else%>
            <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-xs btn-flat' %>
          <%end%>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table class="table datatable">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.full_name, edit_user_path(user) %></td>
                <td><%= user.email %></td>
                <td><%= user.role_name %></td>
                <td><%= link_to edit_user_path(user) do %><i class="fa fa-edit"></i><%end%></td>
                <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?'} do %><i class="fa fa-trash"></i><%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>
